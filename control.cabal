category:            cli
build-type:          Simple
cabal-version:       >= 1.10

executable tracker
  main-is: Tracker.hs
  other-modules: Control.Objective, Control.SQL.Query, Control.Interface.REPL, Control.Interface.TUI
  build-depends: base == 4.*, joint, transformers, text, time, sqlite-simple, haskeline, ansi-terminal, pretty-terminal, vty
  default-extensions: FlexibleInstances, LambdaCase, OverloadedStrings, TypeApplications, TypeOperators, PackageImports
  ghc-options: -Wall -fno-warn-tabs -threaded

executable checklist
  main-is: Checklist.hs
  other-modules: Control.Objective, Control.SQL.Query, Control.Interface.REPL, Control.Interface.TUI
  build-depends: base == 4.*, joint, transformers, text, time, sqlite-simple, haskeline, ansi-terminal, pretty-terminal, vty
  default-extensions: FlexibleInstances, LambdaCase, OverloadedStrings, TypeApplications, TypeOperators, PackageImports
  ghc-options: -Wall -fno-warn-tabs -threaded

executable todo
  main-is: Control/Pandora/Main.hs
  other-modules:
    Control.Pandora.Entity.Amount
    Control.Pandora.Entity.Event
    Control.Pandora.Entity.Objective
    Control.Pandora.Entity.Task
    Control.Pandora.Entity.ID
    Control.Pandora.Widgets.Components.Picker
    Control.Pandora.Widgets.Search
    Control.Pandora.SQLite
    Control.Pandora.TUI
    Control.Pandora.Utils
  build-depends: base == 4.*, pandora, pandora-io, sqlite-simple
  default-extensions:
    DataKinds, ConstraintKinds, ExistentialQuantification, GADTs, QuantifiedConstraints, InstanceSigs
    FlexibleContexts, FlexibleInstances, KindSignatures, StandaloneKindSignatures, LiberalTypeSynonyms, LambdaCase, FunctionalDependencies
    MultiParamTypeClasses, PackageImports, PolyKinds, RankNTypes, ViewPatterns, OverloadedStrings
    ScopedTypeVariables, TypeApplications, TypeFamilies, TypeFamilyDependencies, TypeOperators
  ghc-options: -Wall -fno-warn-tabs -threaded -fprint-potential-instances
